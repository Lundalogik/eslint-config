{
  "name": "@limetech/eslint-config",
  "version": "2.0.0",
  "description": "Reusable lint rules for use in other packages.",
  "author": "Lime Technologies",
  "license": "Apache-2.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"**/*.{ts,tsx,js}\" --max-warnings=0 && prettier -c \"{!(package*).json,.prettierrc}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx,js}\" --fix --max-warnings=0 && prettier --write \"{!(package*).json,.prettierrc}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lundalogik/eslint-config.git"
  },
  "keywords": [
    "Lime",
    "lint",
    "linting",
    "linter",
    "rules",
    "eslint",
    "eslintconfig",
    "prettier"
  ],
  "bugs": {
    "url": "https://github.com/Lundalogik/eslint-config/issues"
  },
  "homepage": "https://github.com/Lundalogik/eslint-config#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^6.9.0",
    "gently-copy": "^3.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-ban": "^1.6.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-sonarjs": "^0.21.0",
    "prettier": "^3.0.3"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-ban": "^1.6.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-sonarjs": "^0.21.0",
    "prettier": "^3.0.3"
  }
}
